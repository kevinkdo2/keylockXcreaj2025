<!-- views/admin/usuario-form.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Mi Aplicaci칩n</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container admin-container">
    <div class="admin-header">
      <h1><%= title %></h1>
      <p>Ingresa los datos del usuario</p>
    </div>

    <div class="admin-menu">
      <a href="/admin/dashboard" class="admin-menu-item">
        <span class="icon">游늵</span>
        <span>Dashboard</span>
      </a>
      <a href="/admin/empresas" class="admin-menu-item">
        <span class="icon">游끽</span>
        <span>Empresas</span>
      </a>
      <a href="/admin/usuarios" class="admin-menu-item active">
        <span class="icon">游녻</span>
        <span>Usuarios</span>
      </a>
      <a href="/admin/paquetes" class="admin-menu-item">
        <span class="icon">游닍</span>
        <span>Paquetes</span>
      </a>
    </div>

    <div class="admin-content">
      <div class="form-container">
        <form action="<%= action %>" method="POST" class="admin-form">
          <div class="form-group">
            <label for="nombre">Nombre del Usuario</label>
            <input 
              type="text" 
              id="nombre" 
              name="nombre" 
              placeholder="Nombre completo"
              value="<%= usuario.nombre || '' %>"
              required
            >
            <% if (typeof errors !== 'undefined' && errors.find(e => e.param === 'nombre')) { %>
              <span class="error-message"><%= errors.find(e => e.param === 'nombre').msg %></span>
            <% } %>
          </div>
          
          <div class="form-group">
            <label for="correo">Correo Electr칩nico</label>
            <input 
              type="email" 
              id="correo" 
              name="correo" 
              placeholder="correo@ejemplo.com"
              value="<%= usuario.correo || '' %>"
              required
            >
            <% if (typeof errors !== 'undefined' && errors.find(e => e.param === 'correo')) { %>
              <span class="error-message"><%= errors.find(e => e.param === 'correo').msg %></span>
            <% } %>
          </div>
          
          <div class="form-group">
            <label for="contrasena">
              Contrase침a
              <% if (usuario.id) { %>
                <small>(Dejar en blanco para mantener la actual)</small>
              <% } %>
            </label>
            <input 
              type="password" 
              id="contrasena" 
              name="contrasena" 
              placeholder="<%= usuario.id ? 'Nueva contrase침a (opcional)' : 'Contrase침a' %>"
              <%= !usuario.id ? 'required' : '' %>
            >
            <% if (typeof errors !== 'undefined' && errors.find(e => e.param === 'contrasena')) { %>
              <span class="error-message"><%= errors.find(e => e.param === 'contrasena').msg %></span>
            <% } %>
          </div>
          
          <% if (user.isAdmin && empresas && empresas.length > 0) { %>
            <div class="form-group">
              <label for="id_empresa">Empresa</label>
              <select id="id_empresa" name="id_empresa" required>
                <option value="">Selecciona una empresa</option>
                <% empresas.forEach(empresa => { %>
                  <option value="<%= empresa.id %>" <%= (usuario.id_empresa == empresa.id) ? 'selected' : '' %>>
                    <%= empresa.nombre %>
                  </option>
                <% }); %>
              </select>
            </div>
          <% } %>
          
          <div class="form-actions">
            <a href="/admin/usuarios" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Mi Aplicaci칩n - Todos los derechos reservados</p>
  </footer>
</body>
</html>